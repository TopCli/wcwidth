{
  "name": "@slimio/wcwidth",
  "version": "1.0.0",
  "description": "Port of C's wcwidth() and wcswidth()",
  "author": "SlimIO",
  "contributors": [
    "Woong Jun <woong.jun@gmail.com> (http://code.woong.org/)",
    "GENTILHOMME Thomas <gentilhomme.thomas@gmail.com>"
  ],
  "engines": {
    "node": ">=12"
  },
  "main": "index.js",
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^13.1.0",
    "@escommunity/minami": "^1.0.0",
    "@slimio/eslint-config": "^4.1.0",
    "@slimio/psp": "^0.11.1",
    "codecov": "^3.7.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.0.0",
    "husky": "^4.2.5",
    "japa": "^3.0.1",
    "nyc": "^15.0.1",
    "pkg-ok": "^2.3.1"
  },
  "husky": {
    "hooks": {
      "pre-push": "cross-env npm test && eslint index.js src/**",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "files": [
    "index.js",
    "index.d.ts",
    "src/combining.js"
  ],
  "license": "MIT",
  "keywords": [
    "wide character",
    "wc",
    "wide character string",
    "wcs",
    "terminal",
    "width",
    "wcwidth",
    "wcswidth"
  ],
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "scripts": {
    "test": "cross-env psp && nyc --reporter=lcov node test/test.js",
    "prepublishOnly": "pkg-ok",
    "doc": "jsdoc -c ./jsdoc.json -r -R ./README.md -P ./package.json --verbose",
    "coverage": "codecov",
    "report": "nyc report --reporter=html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/timoxley/wcwidth.git"
  },
  "bugs": {
    "url": "https://github.com/timoxley/wcwidth/issues"
  },
  "homepage": "https://github.com/timoxley/wcwidth#readme",
  "nyc": {
    "check-coverage": true,
    "per-file": false,
    "lines": 50,
    "statements": 50,
    "functions": 50,
    "branches": 50
  }
}
